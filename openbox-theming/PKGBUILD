pkgbase=openbox-theming
pkgname=('manjaro-openbox-theme-fonts'
         'manjaro-openbox-theme-17.0'
         'manjaro-openbox-theme-18.0'
         )
pkgver=1.3.3
pkgrel=1
arch=('any')
licence=('MIT')

package_manjaro-openbox-theme-fonts() {
    pkgdesc='Manjaro Openbox Theme Fonts'
    depends=('manjaro-openbox-fonts'
	         'ttf-font-awesome'
	         'ttf-font-logos'
	         'ttf-icomoon-icons'
	         'ttf-material-icons'
	         'ttf-polybar-icons'
	         )
    provides=('manjaro-openbox-theme-fonts')
}

package_manjaro-openbox-theme-17.0() {
	pkgdesc='Manjaro Openbox Theme'
	depends=(
        'gtk-theme-breath'
        'openbox-themes'
        'vibrancy-colors'
        'manjaro-wallpaper-17.0'
        )
    provides=('manjaro-openbox-theme-17.0')
}

package_manjaro-openbox-18.0-theme() {
    pkgdesc='Manjaro Openbox Theme 18.0'
    depends=(
        'adapta-maia-theme'
        'papirus-maia-icon-theme'
        'manjaro-wallpaper-18.0'
        )
    provides=('manjaro-openbox-theme-18.0')
}