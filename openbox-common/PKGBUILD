# Maintainer: fhdk <fh at manjaro org>

pkgname=manjaro-openbox-common
pkgver=1.0
pkgrel=2
pkgdesc="Common files needed by Manjaro Openbox"
arch=('any')
url="https://github.com/fhdk/openbox-common.git"
license=('GPL3')
makedepends=('git')
provides=('manjaro-openbox-common')
conflicts=('manjaro-openbox-scripts' 'openbox-scripts')
source=(git+$url)
makedepends=('git')
md5sums=('SKIP')

_install_dir=openbox-common

package() {
        _sharedir=${pkgdir}/usr/share
        _libdir=${pkgdir}/usr/lib/manjaro
	
	cd ${srcdir}/$_install_dir
	
	install -dm755 ${_libdir}
	cp -r common   ${_libdir}
	
	install -dm755 ${_sharedir}
	cp -r doc      ${_sharedir}
	cp -r licenses ${_sharedir}
}
