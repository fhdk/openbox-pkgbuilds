# Maintainer: fhdk <fh@manjaro.org>

pkgname=manjaro-openbox-scripts
pkgver=1.0
pkgrel=1
pkgdesc="A collection of Openbox scripts and pipemenus"
arch=('any')
url="https://github.com/fhdk/openbox-scripts.git"
license=('GPL3')
makedepends=('git')
provides=('manjaro-openbox-scripts')
conflicts=('openbox-scripts')
source=(git+$url)
makedepends=('git')
md5sums=('SKIP')
install=$pkgname.install

_install_dir=openbox-scripts

package() {
        _sharedir=${pkgdir}/usr/share
        _libdir=${pkgdir}/usr/lib/manjaro
	
	cd ${srcdir}/$_install_dir
	
	install -dm755 ${_libdir}
	cp -r common   ${_libdir}
	cp -r scripts  ${_libdir}
	
	install -dm755 ${_sharedir}
	cp -r doc      ${_sharedir}
	cp -r licenses ${_sharedir}
}
